<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity$DummyFragment">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_weight="2.24"
            android:hint="Enter a Web Address" android:layout_toLeftOf="@+id/button"
            android:layout_alignParentLeft="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            android:id="@+id/button" android:layout_alignBottom="@+id/editText" android:layout_alignParentRight="true"/>
    <WebView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webView" android:layout_below="@+id/editText" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"/>
</RelativeLayout>